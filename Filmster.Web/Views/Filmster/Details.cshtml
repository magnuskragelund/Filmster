</script>
<script type="text/javascript" src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
</script></section>
<section class="block">
    <h2>Andre film fra kataloget</h2>
    @Html.Partial("_ScrollingMovies", ViewBag.OtherMovies as List<Movie>);
</section>

 @helper VendorLogo(Vendor vendor)
     {
    var imageName = "";
    switch (vendor.Id)
    {
        case 1:
            imageName = "viaplay.png";
            break;
        case 2:
            imageName = "sputnik.png";
            break;
        case 3:
            imageName = "voddler.png";
            break;
        case 4:
            imageName = "headweb.png";
            break;
        case 5:
            imageName = "sf-anytime.png";
            break;
        case 6:
            imageName = "yousee-tv.png";
            break;
        case 7:
            imageName = "itunes.png";
            break;
        case 8:
            imageName = "cdon.png";
            break;
    }
     <img src="/Content/images/logos/@imageName" height="30" alt="@vendor.Name" title="@vendor.Name" />
}