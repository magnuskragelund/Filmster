@using Filmster.Data
@model Movie

@{
    ViewBag.Title = "Se »" + @Model.Title + "« online nemt og billigt via filmster";
    ViewBag.Description = "Få et hurtigt overblik over hvor du kan leje \"" + @Model.Title + "\" på nettet";
}


<section class="block">
    <h1>Her kan du leje "@Model.Title" online</h1>
    <p>
        Find den udbyder og pris som passer dig bedst. På listen ser du alle de sites hvor du kan se "@Model.Title" på nettet. 
    </p>
        <table>
            <tr>
                <th>Udlejer</th>
                <th>HD</th>
                <th>Pris</th>
                <th>Lej</th>
            </tr>
            @foreach (var rentalOption in Model.RentalOptions.OrderBy(r => r.Price))
            {
                <tr>
                    @*<td>@VendorLogo(rentalOption.Vendor)</td>*@
                    <td>@rentalOption.Vendor.Name</td>
                    <td>@Html.Raw((rentalOption.HighDefinition ? "<b>Ja<b/>" : "Nej"))</td>
                    <td>@rentalOption.Price,-</td>
                    <td class="rent-column"><a href="@rentalOption.Url" data-vendorname="@rentalOption.Vendor.Name" data-moviename="@Model.Title" rel="nofollow" title="Lej filmen hos @rentalOption.Vendor.Name">Lej hos @rentalOption.Vendor.Name »</a></td>
                </tr>
            }
        </table>
        @if (Model.RentalOptions.Any(r => r.Price >= 50))
        {
            <p>
                <small>Hvis prisen er mere end 50 kr. 
                er det typisk prisen for at købe fillmen, så den er din for altid, eller prisen for et abonnement, hvor flere film er inkluderet i prisen.</small>
            </p>
        }
 </section>
 <section class="block details">
    <h1>@Model.Title</h2>
    <img class="cover" src="@Model.RentalOptions.First().CoverUrl" alt="@Model.Title"/>
    <p><b>Beskrivelse: </b>@Model.Plot</p>
    <p>
        Se hvor du kan leje filmen i tabellen øverst på siden.
    </p>
    
</section>
<section class="block">
