@using System.Configuration
<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - filmster.dk</title>
    <meta name="description" content="@ViewBag.Description"/>
    <link href="@Url.Content("~/Content/site.css")" rel="stylesheet" type="text/css" />
    <link href='http://fonts.googleapis.com/css?family=Cabin' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Cuprum' rel='stylesheet' type='text/css'>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.autocomplete.js")" type="text/javascript"></script>
    @if (ConfigurationManager.AppSettings["Environment"] == "production")
    {
        <script type="text/javascript">

             var _gaq = _gaq || [];
             _gaq.push(['_setAccount', 'UA-27026589-1']);
             _gaq.push(['_trackPageview']);

             (function () {
                 var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                 ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                 var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
             })();

        </script>   
    }
</head>
<body>
		<header class="topbar">
			<div class="wrapper">
            <div class="me"><a href="/">filmster</a></div>
			    <nav>
                    <ul>
                        <li>@Html.ActionLink("Forside", "Index", "Filmster")</li>
                        <li>@Html.ActionLink("Søg", "Search", "Filmster")</li>
                        <li>@Html.ActionLink("Filmkatalog", "Catalog", new { id = "a" }, "Filmster")</li>
                        <li>@Html.ActionLink("Hvad?", "About", "Filmster")</li>
                    </ul>
                </nav>
			</div>
		</header>
		<div class="wrapper">
            @RenderBody()
            <footer>
                Filmster.dk - Ris, ros og forslag til forbedringer modtages meget gerne på <a href="mailto:magnuskragelund@gmail.com">magnuskragelund@gmail.com</a> eller <a href="http://twitter.com/magnuskragelund">@Html.Raw("@magnuskragelund")</a>
            </footer>
		</div>
	</body>
</html>
